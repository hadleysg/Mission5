
@{
    ViewData["Title"] = "Tutor";
}

<!-- This is the pricing page where if users want to have a tutor, they can see how much I charge!-->
<h1>Scrapbook Tutoring & Pricing</h1>


<div class="calculator-container">
    <div class="mb-3">
        <label for="hours" class="form-label">Number of Hours:</label>
        <input type="number" id="hours" class="form-control" placeholder="Enter number of hours" min="0">
    </div>

    <div class="mb-3">
        <label for="rate" class="form-label">Rate per Hour:</label>
        <input type="text" id="rate" class="form-control" value="$20" readonly>
    </div>

    <button id="calculate" class="btn custom-button">Calculate Total</button>

    <div class="mt-3">
        <strong>Total Cost: </strong><span id="total">$0</span>
    </div>
</div>

<!-- This section acesses the js file in wwwroot-->
@section Scripts {
    <script src="~/js/calculator.js"></script>
}
